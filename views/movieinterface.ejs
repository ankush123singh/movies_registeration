<style>
    .maincontainer{
    background: #7ddf92af;
    width:100%;
    height:100%;
    display: flex;
    justify-content: center;
    align-items: center;
  

    }
    .box{
        background: #df8e8ee1;
        width:50%;
        height:auto;
        border-radius: 10px;
        padding-left:20px;
        padding-right: 20px;
        
    }
    .heading{
        font-size: 24px;
        font-weight: bold;
        font-family: Oswald;
        padding:5px;
        letter-spacing: 1;
    }
    .image{width:50px;
            height:50px;
            padding:5px;
           }
    .headingdiv{
        display: flex;
        align-items: center;
        flex-direction: row;
        justify-content: space-between;
    }     
    .formDiv{
        margin:10px;

    }   
    .gap{
        margin-bottom:10px;
    }
    
    .btnstyle{
        display: flex;
        align-items: center;
        justify-content: center;
        
    }     
</style>   
<html>
    <head>
        <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Oswald:wght@300&display=swap" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
<script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>    
<script src="/javascripts/project.js"></script>
</head>
    <body>
        <form action="/movies/movies_submit"  enctype="multipart/form-data" method="post">
            <div class="maincontainer">
               <div class="box">
                 <div class="headingdiv">
                    <div style="display: flex; flex-direction: row;">
                    <div><img src="/images/cinema.avif" class="image"></div>
                    <div class="heading">Movie Registration</div>
                </div>
                <div><a href="/movies/fetch_all_movies" style="text-decoration: none;"><img src="/images/display.png" style="width: 40px;"></a></div>
                 </div>
                
                 <div class="row gap">
                    <div class="col-md-6">
                        <select class="form-select" id="stateid" name="stateid" aria-label="Default select example">
                            <option selected>-Select State-</option>
                           
                          </select>
                     
                    </div>
                    <div class="col-md-6">
                        <select class="form-select"  id="cityid" name="cityid" aria-label="Default select example">
                            <option selected>-Select City-</option>
                           
                          </select>
                    </div>
                       
                </div>

                <div class="row gap">
                    <div class="col-md-6">
                        <select class="form-select"  id="cinemaid" name="cinemaid" aria-label="Default select example">
                            <option selected>-Select Cinema-</option>
                           
                          </select>
                    </div>
                    <div class="col-md-6">
                        <select class="form-select"  id="screenid" name="screenid" aria-label="Default select example">
                            <option selected>-Select Screen-</option>
                           
                          </select>
                    </div>
                       
                </div>

                <div class="row gap">
                    <div class="col-md-6">
                     <input type="text"   class="form-control" name="moviename" placeholder="Movie Name" >
                    </div>
                    <div class="col-md-6">
                        <select  class="form-select" name="status" aria-label="Default select example">
                            <option >-Status-</option>
                            <option>Running</option>
                            <option>Coming Soon</option>
                            <option>Discontinue</option>
                          
                          </select>
                    </div>
                </div> 

               

                <div class="row gap">
                    <div class="col-md-12">
                     <input type="text"  class="form-control" name="description" placeholder="Description" >
                    </div>
                </div>
             
                  
                  <div class="row gap">
                    <div class="col-md-12">
                        
                            <label for="formFile" class="form-label">Upload Movie Poster</label>
                            <input  required class="form-control" type="file" id="formFile" name="poster">
                        

                    </div>

                </div>   

                <div class="row gap ">
                    <div class="col-md-6 btnstyle">
                        <button  style="width:300px" type="submit" class="btn btn-primary" >Submit</button>
                    </div>
                    <div class="col-md-6 btnstyle">
                        <button style="width:300px" type="reset" class="btn btn-primary">Reset</button>
                    </div>
                       
                </div>

                <div class="row gap ">
                    <div class="col-md-12 btnstyle">
                        <font size="5" color="green"><%=message %></font>
                    </div>
                </div> 
              

                 </div>
               </div>
            </div>
        </form>
    </body>
</html>